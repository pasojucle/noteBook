{% extends 'base.html.twig' %}
{% form_theme form 'form/custom_theme.html.twig' %}

{% block title %}{{parent()}} Paramètrage{% endblock %}

{% block body_title %}<h1>Paramètrage</h1>{% endblock %}

{% block body %}
 {% include('common/menu.html.twig') %}
    <main id="container" class="index">
        <div>
            {{ form_start(form)}}
            <div class="block x-row">
                <div class="x-content">
                    {{ form_errors(form.parameters) }}
                    <ul>
                    {% for parameter in form.parameters %}
                        <li>
                            {{ form_errors(parameter) }}
                            <div class="form-group">
                                {% if parameter.vars.value.type == 'image' %}
                                    {{ form_label(parameter.children.value) }}
                                    {% for children in parameter.children.value.children %}
                                        {{ form_widget(children) }}
                                    {% endfor %}
                                {% else %}
                                    {{ form_widget(parameter) }}
                                {% endif %}
                            </div>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
                <div class="x-footer">
                    <button class="btn btn-primary"><i class="fas fa-check"></i> Enregiter</button>
                </div>
            </div>
            {{ form_end(form)}}
        </div>
    </main>
{% endblock %}