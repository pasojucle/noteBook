{% extends 'base.html.twig' %}
{% form_theme form 'form/custom_theme.html.twig' %}

{% block title %}{{parent()}} Article{% endblock %}

{% block body_title %}<h1>Ajouter un article</h1>{% endblock %}

{% block body %}
    {% include('common/menu.html.twig') %}
    <main id="container" class="index">
        <div>
            {{ form_start(form)}}
            <div class="block x-row">
                <div class="x-content">
                    <div id="article_selects">
                        <div class="form-group">
                            {{ form_row(form.sectionTitle)}}
                            {{ form_row(form.section)}}
                            {{ form_widget(form.addSection)}}
                        </div>
                        <div class="form-group">
                            {{ form_row(form.chapterTitle)}}
                            {{ form_row(form.chapter)}}
                            {{ form_widget(form.addChapter)}}
                        </div>
                    </div>
                    <div class="form-group w-90">
                        {{ form_row(form.title)}}
                    </div>
                    <div class="form-group w-90">
                        {{ form_row(form.isPrivate)}}
                    </div>
                    {{ form_widget(form.content)}}
                </div>
                <div class="x-footer">
                    <button class="btn btn-primary"><i class="fas fa-check"></i> Enregiter</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
