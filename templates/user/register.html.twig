{% extends 'base.html.twig' %}

{% block title %}{{parent()}} connexion{% endblock %}

{% block body_title %}<h1>Nouveau mot de passe</h1>{% endblock %}

{% block body %}
    {% include('common/menu.html.twig') %}
    <main id="container" class="login">
        <div>
            {{ form_start(form)}}
                <div class="block x-row">
                    <div class="x-content">
                        <div class="row">
                            <div class="smiley w-25"><i class="fas fa-sign-in-alt"></i></div>
                            <div class="w-75">
                                <div class="form-group">
                                    {{ form_row(form.email)}}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.plainPassword.first)}}{{ form_widget(form.plainPassword.first)}}
                                    {{ form_label(form.plainPassword.second)}}{{ form_widget(form.plainPassword.second)}}
                                    <div class="form-errors">{{ form_errors(form.plainPassword.first)}}{{ form_errors(form.plainPassword.second)}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="x-footer">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-check"></i> Se connecter
                        </button>
                    </div>
                </div>
             {{ form_end(form)}}
        </div>
    </main>
{% endblock %}
